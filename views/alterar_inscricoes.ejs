<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nº Dupla</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telemóvel</th>
                            <th>NIF</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                        <% var numero = 1 %>
                        <%for(var j=0; j< Array.length; j++){%>
                            <%for(var i= 0; i< User.length; i++) {%> 
                                <% if(Array[j] == User[i]._id){%>  
                                    <% console.log(Array[j])%>
                                    <% if(numero % 2 != 0 ){ %>
                                        <tr>
                                        <td style="text-align: center"; rowspan="2"><%= numero %></td>
                                    <% } %> 
                                    <% numero++%>
                                        
                                    <td><%= User[i].name%></td>
                                    <td><%= User[i].email%></td>
                                    <td><%= User[i].phone%></td>
                                    <td><%= User[i].nif%></td>
                                    <td>
                                        <a href="/" class="btn border-shadow update">
                                            <span class="text-gradient" id="editar_bd" value="<%=User[i]._id%>"><i class="fas fa-pencil-alt"></i></span>
                                        </a>
                                        <a href="/apagar_inscricao/<%= User[i]._id%>" class="btn border-shadow delete">
                                            <span class="text-gradient" id="apagar_bd" value="<%=User[i]._id%>"><i class="fas fa-times"></i></span>
                                        </a>
                                    </td>
                                    </tr>
                                <%}%>
                            <%}%>
                        <%} %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->